#!/usr/bin/env zsh

# Place Retina internal display (eDP*) below external monitor (HDMI)

SCALE=1.6

EXT="HDMI2"
INT="eDP1"

ext_w=1920
ext_h=1080
int_w=2560
off_w=$(( ($int_w-$ext_w)/2 ))
x=$(( $SCALE*$off_w ))
y=$(( $SCALE*$ext_h ))

xrandr --output "${INT}" --auto --pos ${x%.*}x${y%.*} --output "${EXT}" --auto --scale ${SCALE}x${SCALE} --pos 0x0
